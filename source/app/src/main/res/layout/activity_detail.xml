<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llColorBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/detail_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="创建时间："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detail_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_create"
        android:layout_alignParentRight="true"
        android:text="创建者："
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mytable_messages"
        android:layout_below="@id/detail_name"
        android:textSize="16sp"
        android:singleLine="false"
        android:maxLines="15"
        android:scrollbars="vertical"
        />

    <Button
        android:id="@+id/importMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_detail"
        android:text="添加数据" />

    <Button
        android:id="@+id/deleteFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="100dp"
        android:layout_toRightOf="@id/importMessage"
        android:background="@drawable/bg_detail"
        android:text="删除第一条数据" />

    <Button
        android:id="@+id/deleteLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="100dp"
        android:layout_toRightOf="@id/deleteFirst"
        android:background="@drawable/bg_detail"
        android:text="删除最后一条数据" />
    <Button
        android:id="@+id/importExcel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="30dp"
        android:layout_toRightOf="@id/deleteLast"
        android:background="@drawable/bg_detail"
        android:text="从表格中导入"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3DD7DC"
        android:scaleType="center"
        android:src="@drawable/starttable_round" />

</RelativeLayout>